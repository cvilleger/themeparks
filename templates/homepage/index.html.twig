{% extends 'base.html.twig' %}

{% block body %}
<table class="table table-striped table-dark">
<thead>
<tr class="text-center">
    <th><button type="button" class="btn btn-outline-primary btn-lg btn-block">Attraction</button></th>
    <th><button type="button" class="btn btn-outline-primary btn-lg btn-block">Attente</button></th>
    <th><button type="button" class="btn btn-outline-primary btn-lg btn-block">FastPass</button></th>
    <th><button type="button" class="btn btn-outline-primary btn-lg btn-block">Statut</button></th>
</tr>
</thead>
<tbody>
{% for entry in entries %}
    {% if entry.name is defined %}
        <tr>
            <td><h2>{{ entry.name }}</h2></td>
            <td class="text-center"><h2>{{ entry.waitTime.postedWaitMinutes }} min</h2></td>
            <td class="{{ entry.waitTime.fastPass.available ? 'bg-success' : 'bg-secondary' }}"></td>
            <td class="text-center"><h2>{{ entry.waitTime.status }}</h2></td>
        <tr>
    {% endif %}
{% endfor %}
</tbody>
</table>
{% endblock %}
